  lightGray = #eee
  red = #be2525

  vendor(property, arg)
    -webkit-{property} arg
    {property} arg

  border-radius(radius = 10px)
    vendor('border-radius', radius)

  transition(args)
    vendor('transition', args)

  test(var)
    margin-top unit(var, 'px')
    if var > 10
      margin-bottom unit(var, 'px')

  clear-fix()
    zoom 1
    &:after
    &:before
      content ""
      display table
    &:after
      clear both

  add(a, b, c = a)
    a + b + c

  marginer(a, b)
    return a a*2 a*b b